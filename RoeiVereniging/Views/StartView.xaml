<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RoeiVereniging.ViewModels"
             x:Class="RoeiVereniging.Views.StartView"
             x:DataType="vm:StartViewModel"
             Title="StartView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="startpagina" FontSize="24" HorizontalOptions="Center" />
        <Label Text="{Binding WelcomeMessage}" />
        <Button Text="Login" Command="{Binding ChangeWelcomeMessageCommand}" />
    </StackLayout>
</ContentPage>