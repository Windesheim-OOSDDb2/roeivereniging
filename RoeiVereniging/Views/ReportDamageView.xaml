<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoeiVereniging.Views.ReportDamageView"
			 xmlns:components="clr-namespace:RoeiVereniging.Views.Components"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20,0,20,16" Spacing="16">
			<components:PageHeader PageTitle="Reservering details" />
            <!-- Titel -->
            <Label Text="Schade melden voor: Boot Id/naam"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#0A2A5C"
                   Margin="0,0,0,24"/>
            
            <!-- Schade label en editor -->
            <VerticalStackLayout Padding="36,0" Spacing="8">
                <Label Text="Schade"
                       FontSize="22"
                       TextColor="Black"
                       Margin="0,0,0,0"/>
                <Frame BorderColor="Black"
					   BackgroundColor="White"
                       CornerRadius="10"
                       Padding="0"
                       HasShadow="False"
                       HeightRequest="120"
					   Margin="36,20,32,20">
                    <Editor Text="{Binding Description}"
                            BackgroundColor="Transparent"
                            FontSize="18"
                            Margin="8,0"
							TextColor="Black"
                            AutoSize="TextChanges"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Ernst Picker -->
            <HorizontalStackLayout Padding="36,0" Spacing="0">
                <Picker Title="Ernst"
						TitleColor="Black"
                        ItemsSource="{Binding SeverityLevels}"
                        SelectedItem="{Binding Severity}"
                        FontSize="22"
                        BackgroundColor="#E6ECFA"
                        TextColor="Black"
                        HeightRequest="100"
                        WidthRequest="160"
                        HorizontalOptions="Start"
                        Margin="36,20,32,20"/>
            </HorizontalStackLayout>

            <!-- Schade melden knop -->
            <Button Text="Schade melden"
                    Command="{Binding SubmitReport}"
                    FontSize="24"
                    FontAttributes="Bold"
                    BackgroundColor="#0A2A5C"
                    TextColor="White"
                    CornerRadius="8"
					WidthRequest="1355"
                    Margin="32,20,32,0"
                    HorizontalOptions="Fill"/>

            <!-- Naar schade historie knop -->
            <Button Text="Naar schade historie >"
                    FontSize="20"
                    BackgroundColor="#E6ECFA"
                    TextColor="#0A2A5C"
                    CornerRadius="12"
                    HeightRequest="56"
					WidthRequest="300"
                    Margin="70,20,32,20"
                    HorizontalOptions="Start"
                    ContentLayout="Left,20">
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>