<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoeiVereniging.Views.BoatDetailView"
             BackgroundColor="White">

    <VerticalStackLayout Spacing="0">

        <!-- Header gekopieerd van BoatListView -->
        <Grid BackgroundColor="White" Padding="0,10" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="0" Margin="0,0,0,0">
                <Image Source="logo.png" HeightRequest="100" />
                <Label FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#D32F2F"
                       HorizontalOptions="Center"
                       Margin="0,-10,0,0"/>
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Gebruikers"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnGebruikersClicked"/>
            <Button Grid.Column="2"
                    Text="Boten"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnBotenClicked"/>
            <Button Grid.Column="3"
                    Text="Reparaties"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnReparatiesClicked"/>
            <Button Grid.Column="4"
                    Text="Overzicht"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnOverzichtClicked"/>
        </Grid>

        <HorizontalStackLayout Padding="0,0,180,0" HorizontalOptions="End" BackgroundColor="White" Margin="0, 0, 0, 10">
        </HorizontalStackLayout>

        <!-- Jouw eigen content hieronder -->
        <Grid Margin="0,20,0,0" ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="36">
            <!-- Row 1 -->
            <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#DEE6F8" CornerRadius="8" Padding="12" WidthRequest="600">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Boot Id/Naam: " TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                    <Label Text="{Binding BoatDisplayText}" TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#DEE6F8" CornerRadius="8" Padding="12" WidthRequest="600">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Stuur: " TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                    <Label Text="{Binding SteeringModeText}" TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Row 2 -->
            <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#DEE6F8" CornerRadius="8" Padding="12" WidthRequest="600">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Niveau: " TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                    <Label Text="{Binding BoatLevelText}" TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#DEE6F8" CornerRadius="8" Padding="12" WidthRequest="600">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Aantal roeiers: " TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                    <Label Text="{Binding SeatsAmount}" TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Row 3 -->
            <Frame Grid.Row="2" Grid.Column="0" BackgroundColor="#DEE6F8" CornerRadius="8" Padding="12" WidthRequest="600">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Status: " TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                    <Label Text="{Binding BoatStatusText}" TextColor="#082757" FontSize="16" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>
        </Grid>
    </VerticalStackLayout>
</ContentPage>