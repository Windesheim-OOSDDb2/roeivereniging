<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RoeiVereniging.ViewModels"
             xmlns:components="clr-namespace:RoeiVereniging.Views.Components"
             x:Class="RoeiVereniging.Views.RepairView"
             BackgroundColor="White">

    <VerticalStackLayout Spacing="0">
        <components:AdminPageHeader />
        
        <components:TableComponent
            ItemsSource="{Binding Repairs}"
            Columns="{Binding RepairTableColumns}" />
    </VerticalStackLayout>
</ContentPage>