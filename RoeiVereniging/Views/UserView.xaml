<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoeiVereniging.Views.UserView"
             xmlns:viewmodels="clr-namespace:RoeiVereniging.ViewModels"
             xmlns:components="clr-namespace:RoeiVereniging.Views.Components"
             BackgroundColor="White">
    <VerticalStackLayout>

        <components:AdminPageHeader />
        <!-- Lid toevoegen knop -->
                <Button
                Text="Gebruiker toevoegen"
                Command="{Binding GoToAddUserCommand}"
                StyleClass="PrimaryButton"
                BackgroundColor="#5FA6E8"
                HorizontalOptions="Fill" />

        <components:TableComponent
                ItemsSource="{Binding Users}" 
                Columns="{Binding UserTableColumns}"
                RowClickedCommand="{Binding RowClickedCommand}"/>
        
    </VerticalStackLayout>
</ContentPage>