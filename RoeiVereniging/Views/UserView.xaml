<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoeiVereniging.Views.UserView"
             xmlns:viewmodels="clr-namespace:RoeiVereniging.ViewModels"
             xmlns:components="clr-namespace:RoeiVereniging.Views.Components"
             BackgroundColor="White">
    <VerticalStackLayout>
        <!--Temporary header till component is made-->

        <Grid BackgroundColor="White" Padding="0,10" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="0" Margin="0,0,0,0">
                <Image Source="logo.png" HeightRequest="100" />
                <Label FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#D32F2F"
                       HorizontalOptions="Center"
                       Margin="0,-10,0,0"/>
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Gebruikers"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnGebruikersClicked"/>
            <Button Grid.Column="2"
                    Text="Boten"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnBotenClicked"/>
            <Button Grid.Column="3"
                    Text="Reparaties"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnReparatiesClicked"/>
            <Button Grid.Column="4"
                    Text="Overzicht"
                    FontAttributes="Bold"
                    FontSize="50"
                    TextColor="#082757"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnOverzichtClicked"/>
        </Grid>
            <components:TableComponent
                ItemsSource="{Binding Users}" 
                Columns="{Binding UserTableColumns}"
            />
    </VerticalStackLayout>
</ContentPage>