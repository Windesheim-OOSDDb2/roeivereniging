<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RoeiVereniging.ViewModels"
             xmlns:m="clr-namespace:RoeiVereniging.Core.Models;assembly=RoeiVereniging.Core"
             x:Class="RoeiVereniging.Views.ReservationView"
             x:DataType="vm:ReservationViewModel"
             Title="My Reservations">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="My Reservations" FontSize="22" HorizontalOptions="Center"/>
        <CollectionView ItemsSource="{Binding MyReservations}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Reservation">
                    <Frame Padding="10" Margin="5" BackgroundColor="#0854D1">
                        <VerticalStackLayout>
                            <Label Text="Reservation'}" FontAttributes="Bold" BackgroundColor="#5FA6E8" TextColor="#000000"/>
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:yyyy-MM-dd HH:mm}'}" BackgroundColor="#5FA6E8" TextColor="#000000"/>
                            <Label Text="{Binding EndTime, StringFormat='End: {0:yyyy-MM-dd HH:mm}'}" BackgroundColor="#5FA6E8" TextColor="#000000"/>
                            <Label Text="{Binding BoatId, StringFormat='Boat Id: {0}'}" BackgroundColor="#5FA6E8" TextColor="#000000"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>